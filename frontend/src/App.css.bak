/* 레이아웃 베이스 */
:root {
  --bg: #0f1320;
  --panel: #171c2b;
  --text: #e7ecff;
  --muted: #a9b4d0;
  --accent: #6ea8fe;
  --accent-strong: #4e8df7;
  --danger: #ff8a8a;
  --radius: 14px;
  --shadow: 0 10px 25px rgba(0,0,0,.25);
}

* { box-sizing: border-box; }

body {
  margin: 0;
  background: radial-gradient(1200px 800px at 20% -10%, #1b2140 0%, var(--bg) 60%);
  color: var(--text);
  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Apple SD Gothic Neo", "Noto Sans KR", "Malgun Gothic", Arial, "Segoe UI Emoji";
}

/* 페이지 래퍼 */
.App-header {
  min-height: 100vh;
  display: grid;
  place-items: center;
  padding: 40px 20px;
}

/* 카드 */
.card {
  width: 100%;
  max-width: 820px;
  background: linear-gradient(180deg, #1c2338 0%, var(--panel) 100%);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  padding: 26px;
  border: 1px solid rgba(255,255,255,.06);
}

.card h1 {
  margin: 0 0 18px;
  font-size: 28px;
  letter-spacing: .5px;
}

.subtitle {
  margin: 0 0 22px;
  color: var(--muted);
  font-size: 14px;
}

/* 2열 그리드 */
.grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18px;
}

@media (max-width: 780px) {
  .grid { grid-template-columns: 1fr; }
}

/* 섹션 */
.section {
  background: rgba(255,255,255,.03);
  border: 1px solid rgba(255,255,255,.06);
  border-radius: 12px;
  padding: 18px;
}

/* 폼 */
form {
  display: grid;
  gap: 14px;
}

label {
  display: grid;
  gap: 8px;
  font-size: 13px;
  color: var(--muted);
}

input, select, button {
  font-size: 15px;
}

input, select {
  background: #0e1322;
  color: var(--text);
  border: 1px solid rgba(255,255,255,.12);
  padding: 12px 14px;
  border-radius: 10px;
  outline: none;
}

input:focus, select:focus {
  border-color: var(--accent);
  box-shadow: 0 0 0 3px rgba(110,168,254,.15);
}

.actions {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

button {
  border: 0;
  border-radius: 10px;
  padding: 10px 14px;
  cursor: pointer;
  transition: transform .06s ease;
}

button.primary {
  background: linear-gradient(180deg, var(--accent) 0%, var(--accent-strong) 100%);
  color: #0b1223;
  font-weight: 600;
}

button.secondary {
  background: rgba(255,255,255,.06);
  color: var(--text);
  border: 1px solid rgba(255,255,255,.10);
}

button:active { transform: translateY(1px); }

/* 결과 */
.result {
  margin-top: 12px;
  background: #10172b;
  border: 1px solid rgba(255,255,255,.08);
  padding: 14px;
  border-radius: 10px;
}

.result ul {
  list-style: none;
  padding: 0; margin: 0;
  line-height: 1.9;
}

.error {
  color: var(--danger);
  margin-top: 6px;
  font-size: 14px;
}
